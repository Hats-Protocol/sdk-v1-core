{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["DOM", "DOM.Iterable", "ES2016"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "include": ["./src"],
  "exclude": ["dist", "node_modules", "./**/*.test.ts", "./src/testing/**/*"]
}
