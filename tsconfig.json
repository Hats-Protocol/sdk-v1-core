{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./src"],
  "exclude": ["dist", "node_modules", "./**/*.test.ts", "./src/testing/**/*"]
}
