{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "paths": {
    "@hatsprotocol/sdk-v1-core": ["./packages/core/src/index.ts"],
    "@hatsprotocol/sdk-v1-subgraph": ["./packages/subgraph/src/index.ts"]
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
